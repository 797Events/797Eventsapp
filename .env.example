# 797events - Production Environment Template
# Copy this file to .env.local and fill in your actual values

# IMPORTANT SECURITY NOTES:
# - Never commit real secrets to git
# - Use strong, unique passwords for all services
# - Regenerate all keys and passwords for production

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# Supabase PostgreSQL Database
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@YOUR_SUPABASE_HOST:5432/postgres"
NEXT_PUBLIC_SUPABASE_URL="https://YOUR_PROJECT_ID.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="YOUR_SUPABASE_ANON_KEY"
SUPABASE_SERVICE_ROLE_KEY="YOUR_SUPABASE_SERVICE_ROLE_KEY"

# ==============================================
# PAYMENT CONFIGURATION
# ==============================================

# Razorpay Payment Gateway
# Test Mode (for development)
NEXT_PUBLIC_RAZORPAY_KEY_ID="rzp_test_YOUR_TEST_KEY"
RAZORPAY_KEY_SECRET="YOUR_TEST_SECRET"

# Live Mode (for production - uncomment and replace test keys above)
# NEXT_PUBLIC_RAZORPAY_KEY_ID="rzp_live_YOUR_LIVE_KEY"
# RAZORPAY_KEY_SECRET="YOUR_LIVE_SECRET"

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================

# JWT Secret (CRITICAL: Use a strong, random string in production)
JWT_SECRET="CHANGE_THIS_TO_A_STRONG_RANDOM_STRING_IN_PRODUCTION"

# NextAuth Secret (if using NextAuth)
NEXTAUTH_SECRET="CHANGE_THIS_TO_ANOTHER_STRONG_RANDOM_STRING"

# Admin Password (for demo account - change immediately)
ADMIN_PASSWORD="CHANGE_THIS_SECURE_PASSWORD_IMMEDIATELY"

# ==============================================
# EMAIL CONFIGURATION
# ==============================================

# Gmail SMTP Configuration (for sending tickets/notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"  # Use App Password, not regular password
SMTP_FROM="your-email@gmail.com"
SMTP_FROM_NAME="797 Events"

# ==============================================
# GOOGLE SERVICES (Optional)
# ==============================================

# Google Sheets API (for data export/backup)
GOOGLE_SHEETS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----"
GOOGLE_SHEETS_CLIENT_EMAIL="your-service-account@your-project.iam.gserviceaccount.com"
GOOGLE_SHEETS_SHEET_ID="your_google_sheets_id"

# ==============================================
# TICKET GENERATION
# ==============================================

# QR Code Secret Key (for ticket validation)
QR_SECRET_KEY="CHANGE_THIS_TO_A_UNIQUE_SECRET_FOR_QR_CODES"

# Ticket Template Path
TICKET_TEMPLATE_PATH="/sample-ticket.pdf"

# ==============================================
# DEPLOYMENT CONFIGURATION
# ==============================================

# Environment
NODE_ENV="production"

# Domain Configuration
NEXT_PUBLIC_APP_URL="https://your-domain.com"

# ==============================================
# MONITORING & ANALYTICS (Optional)
# ==============================================

# Sentry Error Tracking
# SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# Google Analytics
# NEXT_PUBLIC_GA_TRACKING_ID="GA_TRACKING_ID"

# ==============================================
# PRODUCTION SECURITY CHECKLIST
# ==============================================

# BEFORE GOING LIVE:
#
# 1. [ ] Replace ALL default passwords and secrets
# 2. [ ] Use HTTPS only (no HTTP in production)
# 3. [ ] Set up proper database backups
# 4. [ ] Configure rate limiting
# 5. [ ] Set up monitoring and error tracking
# 6. [ ] Test payment flows with real transactions
# 7. [ ] Verify email sending works
# 8. [ ] Test all user roles (admin, guard, influencer)
# 9. [ ] Verify QR code generation and scanning
# 10. [ ] Set up SSL certificates
# 11. [ ] Configure CORS properly
# 12. [ ] Review all API endpoints for security
# 13. [ ] Enable database row-level security
# 14. [ ] Set up automated backups
# 15. [ ] Configure proper logging

# ==============================================
# DEVELOPMENT NOTES
# ==============================================

# For local development, you can use simpler values:
# - Use test Razorpay keys
# - Use local database or Supabase development instance
# - Use weak passwords for testing (change for production)

# Example development overrides (uncomment for local dev):
# NODE_ENV="development"
# NEXT_PUBLIC_APP_URL="http://localhost:3000"